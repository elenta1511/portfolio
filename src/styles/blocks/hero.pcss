.container_hero {
  position: absolute;
  top:0;
  bottom: 0;
  right: 0;
  left: 0;
}
.hero__info {
  display: flex;
  justify-content: center;
}
.hero__info-name {
  font-weight: 900;
  font-size: 72px;
  margin-bottom: 240px;
  line-height: .91;
}
.scroll__text {
  text-align: center;
  font-size: 18px;
  font-weight: 600;
  margin-bottom: 170px;
}
.hero_title {
  text-align: end;
  margin-right: 60px;
  margin-top: 3px;
}
