.circle {
  fill: transparent;
}

.circle__under {
  stroke: #eaeaea;
  stroke-width: 5px;
}

.circle__above {
  stroke: #6700f1;
  stroke-width: 9px;
  stroke-dasharray: 251;
  stroke-dashoffset: 251;
  animation: fill 100s linear infinite;
  animation-play-state: paused;
}

.percentage {
  height: 148px;
  transform: rotate(-180deg);
}

@keyframes fill {
  from {
    stroke-dashoffset: 251;
  }

  to {
    stroke-dashoffset: 0;
  }
}